{
  "name": "portchain-backend",
  "version": "1.0.0",
  "author": "George Tanev <georgetjazz@gmail.com>",
  "private": true,
  "scripts": {
    "start": "npm run build && npm run server",
    "build": "npm run clean && npm run transpile",
    "server": "node ./dist-server/bin/www",
    "transpile": "babel ./server --out-dir dist-server",
    "clean": "rimraf dist-server",
    "test": "mocha --r @babel/register --recursive server/_tests_",
    "watch:start": "nodemon"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.18.2",
    "morgan": "~1.9.1",
    "node-cache": "^5.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.16.8",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@babel/register": "^7.10.5",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "mocha": "^8.0.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "nodemonConfig": {
    "exec": "npm run start",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 100,
    "singleQuote": true,
    "arrowParens": "avoid"
  }
}
